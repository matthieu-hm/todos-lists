  "scripts": {
    "lint": "eslint . --fix",
    "install:client": "cd client && npm i",
    "install:server": "cd server && npm i",
    "install:global": "npm i && npm run install-client && npm run install-server",
    "ci:client": "cd client && npm ci",
    "ci:server": "cd server && npm ci",
    "ci:global": "npm ci && npm run ci-client && npm run ci-server",
    "audit:client": "cd client && npm run audit",
    "audit:server": "cd server && npm run audit",
    "audit": "npm audit && npm run audit:client && npm run audit:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^17.1.1",
